@using System.Configuration
@{
    var basehref = ConfigurationManager.AppSettings["QuestionnaireServiceUri"];
}
<input type="hidden" id="wsbasehref" name="wsbasehref" value="@basehref" />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{questionnaire.Title}}</h3>
    </div>
    <div class="panel-body">
        <form id="frmQ" name="frmQ" ng-submit="saveAnswers()" novalidate>
            <div class="form-group" ng-repeat="quest in questionnaire.QandAList">
                <div class="row">
                    <label class="col-sm-4 control-label">{{quest.Question}}</label>
                    <input class="col-sm-8" ng-model="quest.Answer" required=""/>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <button class="btn btn-success" ng-disabled="frmQ.$invalid" ng-click="saveAnswers()">Submit Questionnaire</button>
    </div>
</div>

